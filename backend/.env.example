# Server Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# Database
MONGODB_URI=mongodb://mongo:27017/secure_chat
MONGODB_TEST_URI=mongodb://localhost:27017/secure_chat_test

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Secrets (CHANGE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Encryption Keys (CHANGE IN PRODUCTION! Must be 32 bytes for AES-256)
ENCRYPTION_KEY=12345678901234567890123456789012
ENCRYPTION_IV=1234567890123456

# CORS
CORS_ORIGIN=http://localhost:3000

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET=your-session-secret-change-this-in-production

# Admin Credentials (Default - CHANGE IMMEDIATELY!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=Admin123!@#
ADMIN_EMAIL=admin@securechat.com

# 2FA
TWO_FACTOR_ENABLED=false

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Steganography Detection
ENTROPY_THRESHOLD=7.5
ENABLE_STEGO_DETECTION=true
